{
  "name": "react-useform",
  "version": "1.0.0",
  "description": "A simple field validator for forms using reack hooks",
  "main": "./src/useForm/index.js",
  "scripts": {
    "lint": "eslint \"src/**/*.{tsx,ts}{,?}\"",
    "lint:fix": "eslint --fix  \"src/**/*.{tsx,ts}\"",
    "prettier": "prettier --write \"src/**/*.{ts,tsx}\"",
    "start": "webpack serve --config ./configs/webpack.development.ts",
    "build:docs": "webpack --config ./configs/webpack.production.ts",
    "clean:dist": "rimraf dist",
    "build:useform": "babel src/useForm --ignore **/*.test.* --out-dir dist --extensions \".ts,.js\"",
    "generate-declarations": "tsc --project tsconfig.useForm.json",
    "prepublish": "npm run clean:dist && npm run generate-declarations && npm run build:useform",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tony1496/react-useForm.git"
  },
  "author": "TonyCJ",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tony1496/react-useForm/issues"
  },
  "homepage": "https://github.com/tony1496/react-useForm#readme",
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.18.0",
    "@babel/plugin-transform-runtime": "^7.18.0",
    "@babel/preset-env": "^7.18.0",
    "@babel/preset-react": "^7.17.12",
    "@babel/preset-typescript": "^7.17.12",
    "@svgr/webpack": "^6.2.1",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.2.0",
    "@types/jest": "^27.5.1",
    "@types/styled-components": "^5.1.25",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "babel-loader": "^8.2.5",
    "babel-plugin-styled-components": "^2.0.7",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "prettier": "2.6.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.8.0",
    "url-loader": "^4.1.1",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.9.0",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@types/node": "^17.0.35",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "@types/react-router-dom": "^5.3.3",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "styled-components": "^5.3.5",
    "typescript": "^4.6.4"
  }
}
